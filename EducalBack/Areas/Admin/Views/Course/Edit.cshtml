@model CourseEditVM
<div class="container">
    <div class="course-images mt-3 d-flex" >
        @foreach (var item in Model.ExistImages)
        {
                <div class="image-card-product @(item.IsMain ?"hide-btn":"show-btn")" style="width: 200px; height:130px; position:relative">
                    <img style="width: 100%; height:100%; " src="~/assets/img/@item.Image" class="card-img-top show-delete-btn @(item.IsMain ?"is-main-image":"") " alt="...">
                    
                        <button class="btn btn-danger btn-sm delete-btn" data-courseId="@item.CourseId" data-id="@item.Id" style="position:absolute; top:50px; left:42px; opacity:0; width:82px;">Delete</button>
                        <button class="btn btn-success btn-sm main-image-btn" data-courseId="@item.CourseId" data-id="@item.Id" style="position:absolute; top:90px; left:42px; opacity:0;">Set Main</button>

                </div>
            
        }
    </div>
    <div class="row mt-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Vertical Form</div>
                    <hr>
                    <form method="post" asp-action="Edit" enctype="multipart/form-data">
                        <div class="form-group mt-3">
                            <label for="input-1">Course</label>
                            <input asp-for="Name" class="form-control" id="input-1">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="input-1">Description</label>
                            <input asp-for="Description" class="form-control" id="input-1">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="input-1">Price</label>
                            <input asp-for="Price" type="number" class="form-control" step="any" min="0" id="input-1">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="input-1">Category</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
                        </div>
                        <div class="form-group">
                            <label for="input-1">Images</label>
                            <input asp-for="NewImages" class="form-control" id="input-1" maxlength="100" placeholder="Course ...">
                            <span asp-validation-for="NewImages" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-light px-5"> Submit</button>
                            <a class="btn btn-light px-5" asp-action="Index"> Cancel</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!--End Row-->
    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->

</div>



